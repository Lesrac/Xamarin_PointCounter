<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="PointCounter.NewGamePage">
	<ContentPage.Padding>
		<OnPlatform x:TypeArguments="Thickness"
			iOS="20, 40, 20, 20"
			Android="20,20,20,20"
			WinPhone="20,20,20,20" />
	</ContentPage.Padding> 
	<ContentPage.Content>
		<StackLayout VerticalOptions="FillAndExpand"
					 HorizontalOptions="FillAndExpand"
					 Orientation="Vertical"
					 Spacing="15">
			<TableView Intent="Form">
				<TableRoot>
					<TableSection Title="New Game">
						<EntryCell Keyboard="Text" Label="Game Name" Placeholder="Uno" />
						<EntryCell Keyboard="Numeric" Label="Players" Placeholder="2" />
					</TableSection>
				</TableRoot>
			</TableView>
			<Button x:Name="createGameButton" Text="Create Game" Clicked="OnCallCreateGame"/>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
